<div class="container">
<div class="text-center">
<div class="block">
<h2 class="mb-4">Войти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email",
      class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "пароль",
      class: "form-control"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Войти", class: 'btn btn-primary' %>
  </div>
<% end %>
<div class="links">
  <%= link_to "Регистрация", new_registration_path(resource_name) %>
</div>

<div class="links">
  <%= link_to "Забыли Ваш пароль?", new_password_path(resource_name) %>
</div>

</div>
</div>
</div>
