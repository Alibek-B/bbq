<div class="container">
<div class="text-center">
<div class="block">

<div class="text-center">
  <h2 class="mb-4">Регистрация</h2>
  <%= image_tag user_avatar(@user)%>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email",
      class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "пароль",
      class: "form-control" %>

    <% if @minimum_password_length %>
    <small>(не менее <%= @minimum_password_length %> символов)</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
      placeholder: "повторите пароль", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="links">
  <%= link_to "Войти", new_session_path(resource_name) %>
</div>

</div>
</div>
</div>
